<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/actionbar"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context="pt.up.fe.droidbeiro.Presentation.BombeiroMain">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btnred"
        android:text="Modo&#10;Combate"
        android:id="@+id/btn_modo_combate"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/lista_mensagens"
        android:layout_gravity="center_horizontal"
        android:fastScrollAlwaysVisible="true"
        android:background="@color/body_background"
        android:layout_alignParentEnd="true"
        android:fastScrollStyle="@android:color/black"
        android:cacheColorHint="#FFDAFF7F"
        android:focusable="false"
        android:fastScrollEnabled="true"
        android:focusableInTouchMode="false"
        android:choiceMode="singleChoice"
        android:descendantFocusability="beforeDescendants"
        android:listSelector="@android:color/darker_gray"
        android:layout_below="@+id/btn_modo_combate"
        android:layout_marginTop="10dp"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msg_custom"
        android:singleLine="true"
        android:layout_toStartOf="@+id/btn_enviar_msg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/body_background_green"
        android:hint="Mensagem"
        android:layout_alignTop="@+id/btn_enviar_msg" />

    <Button
        android:id="@+id/btn_enviar_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#5A747F"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Enviar"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/lista_mensagens"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
