<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.up.fe.droidbeiro" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission
        android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/droidbeiro_app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pt.up.fe.droidbeiro.Presentation.Connection"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pt.up.fe.droidbeiro.Presentation.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="pt.up.fe.droidbeiro.Presentation.ChefeMain"
            android:label="Chefe de Equipa" >
        </activity>
        <activity
            android:name="pt.up.fe.droidbeiro.Presentation.BombeiroMain"
            android:label="Bombeiro" >
        </activity>
        <activity
            android:name="pt.up.fe.droidbeiro.Presentation.ChefeLF"
            android:label="Linha de Fogo" >
        </activity>
        <activity
            android:name="pt.up.fe.droidbeiro.Presentation.BombeiroMC"
            android:label="Modo de Combate" >
        </activity>
    </application>

</manifest>
